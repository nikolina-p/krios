{% extends "base.html.twig" %}

{% block body %}
    {% if user.id != "" %}
        {% set title = "Izmena podataka" %}
        {% set buttonTitle = "SAÄŒUVAJ IZMENE" %}
    {% else %}
        {% set title = "Unos novog korisnika" %}
        {% set buttonTitle = "UNESI KORISNIKA" %}
    {% endif %}
    <div id="patientForm">
        <h3>{{ title }}</h3>
        {{ form_start(form) }}
        <table id="patientForm">
            <tr>
                <td class="label">Ime</td>
                <td>{{ form_row(form.name) }}</td>
            </tr>
            <tr>
                <td class="label">Prezime</td>
                <td>{{ form_row(form.surname) }}</td>
            </tr>
            <tr>
                <td class="label">Korisnicko ime</td>
                <td>{{ form_row(form.username) }}</td>
            </tr>
            <tr>
                <td class="label">Lozinka</td>
                <td>{{ form_row(form.password.first) }}</td>
            </tr>
            <tr>
                <td class="label">Ponovi lozinku</td>
                <td>{{ form_row(form.password.second) }}</td>
            </tr>
        </table>
        <br>
        <button type="submit" class="patientForm">{{ buttonTitle }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}