<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Krios Dental Studio{% endblock %}</title>
        <link rel="icon" href="{{ asset("uploads/design/logoIcon.png") }}" type="image/x-icon"/>
        {% block stylesheets %}
            <link href="{{ asset('krios.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
    <div id="navigation">
        {% block navigation %}
            {% if is_granted('ROLE_USER') %}
                <p>HI, {{ app.user.username }}!</p>
                <a href="{{ path('app_logout') }}">logout</a>
                <a href="{{ path('change_password') }}">change password</a>
                <a href="{{ path('manage_users') }}">manage users</a>
            {% else %}
                <span><a href="{{ path('app_login') }}">login</a></span>
            {% endif %}
        {% endblock %}
    </div>
    <hr>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/krios.js') }}"></script>
        {% endblock %}
    </body>
</html>
