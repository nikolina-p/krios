<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Krios Dental Studio{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('krios.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
    <div id="navigation">
        {% block navigation %}
            {% if is_granted('ROLE_USER') %}
                <span><a href="{{ path('app_logout') }}">logout</a></span>
                <span><p>HI, {{ app.user.username }}!</p></span>
            {% else %}
                <span><a href="{{ path('app_login') }}">login</a></span>
            {% endif %}
        {% endblock %}
    </div>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/krios.js') }}"></script>
        {% endblock %}
    </body>
</html>
