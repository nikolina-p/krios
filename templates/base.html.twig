<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Krios Dental Studio{% endblock %}</title>
        <link rel="icon" href="{{ asset("uploads/design/logoIcon.png") }}" type="image/x-icon"/>
        {% block stylesheets %}
            <link href="{{ asset('krios.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
    <div id="navigation">
        {% block navigation %}
            {% if is_granted('ROLE_USER') %}
                <div class="row">
                    <div class="home column_25">
                        <a href="{{ path('homepage', {'page': 1}) }}" class="x-small">
                            <img src="{{ asset('uploads/design/patients.png') }}" class="homeIcon">
                        </a>
                    </div>
                    <div class="userdata column_75">
                        <a href="{{ path('app_logout') }}" id="logout">logout</a>
                        <div class="username">
                            <p class="text brown"><b >Korisnik: </b></p>
                            <p class="text username">{{ app.user.name~" "~app.user.surname }}</p>
                        </div>

                    </div>
                </div>
            {% else %}
                <span><a href="{{ path('app_login') }}">login</a></span>
            {% endif %}
        {% endblock %}
    </div>
    <div class="row mainPage">
        <div id="body" class="mainBox column_85">
            {% block body %}{% endblock %}
        </div>
        <div class="column_13 rightSidebar">
            <div class="sidebarLinks">
                {% block sidebar %}
                    <div class="sidelink">
                        <a href="{{ path('homepage') }}" class="sidelink">Pacijenti</a>
                    </div>
                    <div class="sidelink">
                        <a href="{{ path('new_patient') }}" class="sidelink">Novi pacijent</a>
                    </div>
                    <div class="sidelink">
                        <a href="{{ path('manage_users') }}" class="sidelink">Administracija korisnika</a>
                    </div>
                    <div class="sidelink">
                        <a href="{{ path('change_password') }}" class="sidelink">Promeni lozinku</a>
                    </div>
                {% endblock %}
            </div>

        </div>
    </div>

        {% block javascripts %}
            <script src="{{ asset('js/krios.js') }}"></script>
        {% endblock %}
    </body>
</html>
